<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="item"
            type="com.cloudcreativity.intellijSchool.entity.FootEntity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="45dip"
                android:layout_height="45dip"
                avatarWithSex="@{item.userDomain}"
                android:src="@mipmap/avatar_female"/>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dip"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_515151"
                        android:textSize="@dimen/sp16"
                        android:text="@{item.userDomain.realName}"/>
                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/ivGender"
                        android:layout_width="18dip"
                        android:layout_height="18dip"
                        android:layout_marginStart="5dip"
                        android:src="@mipmap/female"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp12"
                    android:textColor="@color/gray_919191"
                    android:layout_marginTop="5dip"
                    android:text="@{item.userDomain.schoolName}"/>
            </LinearLayout>
            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/ibMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:padding="5dip"
                android:src="@mipmap/ic_more"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_717171"
            android:layout_marginTop="5dip"
            android:textSize="@dimen/sp16"
            android:text="@{item.content}"/>
        <com.cloudcreativity.intellijSchool.utils.ScrollViewInnerGridView
            android:id="@+id/gv_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:verticalSpacing="10dip"
            android:horizontalSpacing="10dip"
            android:scrollbars="none"
            android:numColumns="3"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_919191"
                android:textSize="@dimen/sp12"
                android:layout_gravity="start|bottom"
                android:text="@{item.createTime}"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:gravity="bottom"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_919191"
                    android:textSize="@dimen/sp14"
                    android:text="@{String.valueOf(item.zanNum)}"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dip"
                    android:textColor="@color/gray_919191"
                    android:textSize="@dimen/sp14"
                    android:gravity="center_vertical"
                    android:text="@string/str_like_tips"/>
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/ivLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:layout_marginEnd="15dip"
                    android:src="@mipmap/ic_like"/>
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/ivPing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:src="@mipmap/ic_ping"/>
            </LinearLayout>
        </FrameLayout>
        <com.cloudcreativity.intellijSchool.utils.ScrollViewInnerListView
            android:id="@+id/lv_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/transparent"
            android:scrollbars="none"
            android:listSelector="@color/gray_f1f1f1"
            android:layout_marginTop="10dip" />
    </LinearLayout>
</layout>